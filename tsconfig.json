{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es6", "dom", "es7"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@redux/*": ["./src/redux/*"],
      "@components/*": ["./src/web/components/*"],
      "@shared/*": ["./src/shared/*"],
      "@web/*": ["./src/web/*"],
      "@app/*": ["./src/app/*"]
    }
  },
  "include": [
    "./node_modules/@types/",
    "./config/",
    "./src/",
    "./test/"
  ]
}
